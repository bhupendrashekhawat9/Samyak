{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ES6",                     // ✅ changed from NodeNext
      "moduleResolution": "node",         // ✅ still okay with Node ESM
      "outDir": "./dist",
      "esModuleInterop": true,
      "allowJs": true,
      "types": ["node"],
      "skipLibCheck": true,

    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
  }
  